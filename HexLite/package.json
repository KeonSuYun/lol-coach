{
  "name": "hex-lite-client",
  "version": "1.0.0",
  "description": "HexCoach Light Client",
  "main": "main.js",
  "author": "HexCoach",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "find-process": "^1.4.7",
    "koffi": "^2.14.1",
    "lucide-react": "^0.562.0",
    "react-hot-toast": "^2.6.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.hexcoach.lite",
    "productName": "HexCoach Lite",
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "lcu.js",
      "package.json",
      "dist/**/*",        
      "resources/**/*"
    ],
    "win": {
      "icon": "resources/icon.ico",
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico"
    }
  }
}